<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back"
    tools:context=".HomePage" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/logo_2" />
    
    <ImageView
        android:id="@+id/survey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:contentDescription="@string/icon"
        android:onClick="survey"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/survey_3" />
    
    <ImageView
        android:id="@+id/survey_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/appointment_2"
        android:layout_below="@+id/logo"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="45dp"
        android:contentDescription="@string/icon"
        android:src="@drawable/survey" />

    <ImageView
        android:id="@+id/appointment_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/survey_2"
        android:layout_marginTop="70dp"
        android:contentDescription="@string/icon"
        android:src="@drawable/appointments" />
    
    <ImageView
        android:id="@+id/appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toRightOf="@+id/appointment_2"
        android:layout_below="@id/survey"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/icon"
        android:onClick="survey"
        android:src="@drawable/appointment_2" />

    
</RelativeLayout>
